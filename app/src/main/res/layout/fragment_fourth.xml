<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthFragment"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/fourth_fragment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/text_fragment_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fourth_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/fourth_fragment_text"
        app:layout_constraintEnd_toEndOf="@+id/fourth_fragment_textView"
        app:layout_constraintStart_toStartOf="@+id/fourth_fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/fourth_fragment_textView" />

    <EditText
        android:id="@+id/fourth_fragment_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/fourth_fragment_text"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/text_fragment_empty"
        app:layout_constraintEnd_toEndOf="@+id/fourth_fragment_title"
        app:layout_constraintStart_toStartOf="@+id/fourth_fragment_title"
        app:layout_constraintTop_toBottomOf="@+id/fourth_fragment_title" />
</androidx.constraintlayout.widget.ConstraintLayout>